<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DATN Complete Test Suite" parallel="false" verbose="2">
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.JUnitReportReporter"/>
    </listeners>

    <test name="Login Tests" preserve-order="true">
        <classes>
            <class name="tc_website.LoginTestDataDriven"/>
        </classes>
    </test>

    <test name="Registration Tests" preserve-order="true">
        <classes>
            <class name="tc_website.RegistrationTestDataDriven"/>
        </classes>
    </test>

    <test name="Cart Management Tests" preserve-order="true">
        <classes>
            <class name="tc_website.tc_cartManagement"/>
        </classes>
    </test>

    <test name="User Profile Tests" preserve-order="true">
        <classes>
            <class name="tc_website.tc_viewProfile"/>
            <class name="tc_website.tc_updateProfile"/>
        </classes>
    </test>

    <test name="Product Tests" preserve-order="true">
        <classes>
            <class name="tc_website.tc_viewProductDetail"/>
            <class name="tc_website.tc_search"/>
        </classes>
    </test>

    <test name="Payment Tests" preserve-order="true">
        <classes>
            <class name="tc_website.tc_payment"/>
        </classes>
    </test>

    <test name="Logout Tests" preserve-order="true">
        <classes>
            <class name="tc_website.tc_logout"/>
        </classes>
    </test>
</suite>